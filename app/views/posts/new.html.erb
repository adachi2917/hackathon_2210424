<div class="main posts-new">
    <div class="container">
        <h1 class="form-heading">投稿する</h1>
        <div class="form">
            <div class="form-body">
                <%= form_with url:"/posts/create" do %>
                    <% @post.errors.full_messages.each do |message| %>
                        <div class="form-error">
                            <%= message %>
                        </div>
                    <% end %>
                    <%= form_with url: "/posts/new", model: @post,local: true do |f| %>
                        <%= f.text_field :content %>
                        <%= f.submit "投稿" %>
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>
</div>

